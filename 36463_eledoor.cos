* teleport push script
scrp 3 2 36463 1
	rtar 3 2 36463
	setv va00 posx
	setv va01 posy
	setv va02 posb
	doif from eq pntr
		cmrp va00 va01 1
		etch 4 0 0
			gsub teleport
		next
	else
		targ from
		gsub teleport
	endi
	subr teleport
* wait
		stim writ targ 75 1
* go in
		stim writ targ 49 1
* move
		inst
		setv va10 movs
		doif va10 eq 0
			mvsf va00 va02
		else
			mesg writ targ 5
			wait 2
			mvsf va00 va02
		endi
		slow
* travel internal door
		stim writ targ 96 1
* travel meta door
		stim writ targ 95 1
* go out
		stim writ targ 50 1

	retn

endm


