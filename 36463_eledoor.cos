* lift push script (go up)
scrp 3 1 36463 1
	doif from ne pntr
		doif ov00 ne ownr
			targ ov00
			setv va00 posx
			setv va02 posy

			targ from
* wait
			stim writ from 75 1
* go uptt
			stim writ from 51 -1
* move
			inst
			setv va10 movs
			doif va10 eq 0
				mvsf va00 va02
			else
				mesg writ targ 5
				wait 2
				mvsf va00 va02
			endi
			slow
* travel lift
			stim writ from 94 1
			targ ownr
			targ ov00
			lock
			frat 40
			anim [0 0 0 0]
			over
			unlk

			targ ownr
			lock
			frat 40
			anim [0 0 0 0]
			over
			unlk

		else
* disappoint
			stim writ from 0 1
		endi
	endi
endm

